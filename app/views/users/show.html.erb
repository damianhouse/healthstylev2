<div class="text-center">
  <p id="notice"><%= notice %></p>

  <% if @user.avatar.exists? %>
    <%= image_tag @user.avatar, id: "show-page-avatar", class: "img-responsive" %>
  <% else %>
    <%= image_tag 'generic_avatar.jpg', id: "show-page-avatar", class: "img-responsive" %>
  <% end %>

  <% unless current_user %>
    <p>
      <strong>Coach <%= @user.first_name if @user.first_name %></strong>
    </p>

    <p>
      <% if @user.philosophy %>
        <strong>Philosophy:</strong>
        <%= @user.philosophy %>
      <% end %>
    </p>
  <% end %>

  <% if current_user %>
    <% if current_user.is_admin %>
      <p>
        <strong>First name:</strong>
        <%= @user.first_name if @user.first_name %>
      </p>

      <p>
        <strong>Last name:</strong>
        <%= @user.last_name if @user.last_name %>
      </p>

      <% if @user.is_coach %>
        <p>
          <strong>Greeting:</strong>
          <%= @user.greeting %>
        </p>

        <p>
          <strong>Philosophy:</strong>
          <%= @user.philosophy %>
        </p>
        <p>
          <strong>Approved:</strong>
          <%= @user.approved %>
        </p>
      <% end %>

      <p>
        <strong>Phone Number:</strong>
        <%= @user.phone_number %>
      </p>

      <p>
        <strong>Email:</strong>
        <%= @user.email %>
      </p>

      <p>
        <strong>Sign In Count:</strong>
        <%= @user.sign_in_count %>
      </p>

      <p>
        <strong>Last Sign In At:</strong>
        <%= @user.last_sign_in_at.strftime("%D %H:%M %P") unless @user.last_sign_in_at.nil? %>
      </p>

    <% elsif current_user == @user %>
      <p>
        <strong>First name:</strong>
        <%= @user.first_name %>
      </p>

      <p>
        <strong>Last name:</strong>
        <%= @user.last_name %>
      </p>

      <p>
        <strong>Phone Number:</strong>
        <%= @user.phone_number %>
      </p>

      <p>
        <strong>Email:</strong>
        <%= @user.email %>
      </p>

      <% if @user.is_coach %>

        <p>
          <strong>Greeting:</strong>
          <%= @user.greeting %>
        </p>

        <p>
          <strong>Philosophy:</strong>
          <%= @user.philosophy %>
        </p>

      <% end %>
    <% else %>

      <p>
        Coach <%= @user.first_name %>
      </p>

      <p>
        <strong>Philosophy:</strong>
        <%= @user.philosophy %>
      </p>

    <% end %>

    <% unless @user.is_admin || @user.is_coach %>
      <p>
        <strong>Primary coach:</strong>
        Coach <%= @primary_coach.first_name if @primary_coach%>
      </p>

      <p>
        <strong>Secondary coaches:</strong>
        Coach <%= @secondary_coach.first_name if @secondary_coach %> and Coach <%= @tertiary_coach.first_name if @tertiary_coach %>
      </p>
    <% end %>
  <% end %>
</div>
<div class="text-center">
  <br />
  <%= link_to 'Edit', edit_user_path(@user) %> |
  <%= link_to 'Back', users_path %>
</div>

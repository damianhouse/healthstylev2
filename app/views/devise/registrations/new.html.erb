<div class="text-center">
  <h1 class="text-center">Sign Up Steps:</h1>
  <h2 class="text-center"><strong>1 . .</strong> 2 . . 3</h2>
   <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :post, class: 'form-horizontal', multipart: true }) do |f| %>
   <%= devise_error_messages! %>

   <% if @user.errors.any? %>
     <div id="error_explanation">
       <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

       <ul>
       <% @user.errors.full_messages.each do |message| %>
         <li><%= message %></li>
       <% end %>
       </ul>
     </div>
   <% end %>

   <%= render "form", f: f  %>
  <%= render "devise/shared/links" %>
  <% end %>
</div>
